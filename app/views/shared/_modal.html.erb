<!-- Small modal -->
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <h2>Hello, Friend</h2>
      <%= form_tag chats_path, method: :post do %>
        <%= text_field_tag :username, "", class: "form-control", placeholder: "What's your name?" %>
        <%= submit_tag "Submit", class: "btn btn-modal" %>
      <% end %>
      <% if !user_signed_in? %>
        <div class="sign_in_link">
          <%= link_to("Login", "/users/sign_in") %>
        </div>
      <% end %>
    </div>
  </div>
</div>


