
<div class="navbar-umbrella navbar-fixed-top navbar-transparent">
<!-- Logo  -->
  <%= link_to(root_path) do   %>
  <%= image_tag 'logo-full-basic.png', class: "navbar-umbrella-brand" %>
  <% end %>

<!-- Right Navigation -->

<div class="navbar-right hidden-xs hidden-sm">
  <% if user_signed_in? && current_user.is_helper?%>
    <div class="navbar-wagon-item">
    <div class="dropdown">
      <% if current_user.photo? %>
        <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-umbrella-menu", "data-toggle" => "dropdown"%>
      <% else %>
        <%= image_tag 'http://www.fastrackerzkennel.com/wp-content/uploads/2014/03/male-placeholder-image.jpeg', class: "avatar dropdown-toggle", id:"navbar-umbrella-menu", "data-toggle" =>"dropdown" %>
      <% end %>
      <ul class="dropdown-menu dropdown-menu-right navbar-umbrella-dropdown-menu">
        <li><%= link_to "My Dashboard", my_dashboard_path %>
        <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
    </div>
  <% elsif user_signed_in? %>
    <div class="navbar-wagon-item">
    <div class="dropdown">
      <i class="fas fa-user" class="avatar dropdown-toggle" id="navbar-umbrella-menu" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-umbrella-dropdown-menu">
        <li><%= link_to "Emergency contacts", emergency_contacts_path %></li>
        <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
    </div>
  <% else %>
    <a href="<%= new_user_session_path %>" class="navbar-wagon-item navbar-wagon-link">VOLUNTEER LOGIN</a>
  <% end %>
</div>

<!-- Dropdown appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
  <div class="dropdown">
    <i class="fas fa-bars dropdown-toggle" style="color: #282E38"data-toggle="dropdown" role="button"></i>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <% if user_signed_in? && current_user.is_helper? %>
      <li><a href="#" class="navbar-umbrella-item navbar-umbrella-link">My shifts</a></li>
      <li><a href="#" class="navbar-umbrella-item navbar-umbrella-link">Escalate</a></li>
      <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>

      <% elsif user_signed_in? %>
      <li><a href="#" class="navbar-umbrella-item navbar-umbrella-link">Emergency contacts</a></li>
      <% else %>
      <li><a href="<%= new_user_session_path %>" class="navbar-umbrella-item navbar-umbrella-link">Volunteer login</a></li>
      <% end %>
    </ul>
  </div>
</div>
</div>
