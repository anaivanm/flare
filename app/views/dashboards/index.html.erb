<h1>My Dashboards</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= image_tag @user.photo.url || "http://placecage.com/50/50" %>
      <p>Upload a new photo</p>
      <%= simple_form_for(@user, as: :user, url: user_registration_path, method: :patch) do |f|%>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input(:current_password,{
              hint: "Type in your password to save your changes",
              required: false,
              input_html: { autocomplete: "current-password" }
              }) %>
          </div>
           <div class="form-actions">
              <%= f.button :submit, "Update" %>
            </div>
          <% end %>
    </div>
  </div>
</div>

