<h1 class="dashboard-title">My Dashboard</h1>
<div class="dashboard-container">
  <div class="wrapper">
    <div class="container" >
      <div class="row" align="justify">
        <div class="col-md-4">
        <%= image_tag @user.photo.url || "http://placecage.com/50/50", size: "200x200", class: "profile-image" %>
        </div>
        <div class="col-md-4">
        <!-- cl_image_tag current_user.photo, class: "avatar"  -->
       <!--  <p>Upload a new photo</p> -->
          <%= render "edit_user_info", user: @user %>
        </div>
      </div>
    </div>
  </div>
  <div class="open-chat-list-container">
    <ul>
      <% @open_chats.each do |chat| %>
        <% if chat.helpee.username? %>
          <li><%= link_to "#{chat.helpee.username}", chat_path(chat) %></li>
        <% else %>
          <li><%= link_to "Anon", chat_path(chat) %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
