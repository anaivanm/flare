          <% end %>
          <br>
          <br>
          <a href="#" id="edit_profile_info">
            <span>Username: </span><%= @user.username %>
            <br>
            <span>Email: </span><%= @user.email %>
            <br>
            <span>Password: </span>******
            <br>
            <span>Photo </span>
            <br>
            <i class="far fa-edit"></i>
          </a>
        </div>
        <div class="open-chat-list-container col-md-5 col-md-offset-1">
          <%= render "open_chats_list", chats: @open_chats %>
