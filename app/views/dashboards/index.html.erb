<h1 class="dashboard-title">My Dashboard</h1>
<div class="dashboard-container">
  <div class="wrapper">
    <div class="container" >
      <div class="row" align="justify">
        <div class="col-md-4">
          <% if @user.photo? %>
            <%= cl_image_tag @user.photo, size: "200x200", class: "profile-image" %>
          <% else %>
            <%= image_tag "http://placecage.com/200/200", size: "200x200", class: "profile-image" %>
          <% end %>
        </div>
        <div class="col-md-4">
       <!--  user info -->
          <%= render "edit_user_info", user: @user %>
        </div>
      </div>
    </div>
  </div>
  <!-- open chat list -->
  <div class="open-chat-list-container">
    <%= render "open_chats_list", chats: @open_chats %>
  </div>

  <%= link_to "Refresh Chat", open_chats_path, remote: true, class: "btn btn-primary", id: "monkeypants"  %>
</div>

<%= content_for :after_js do %>
  <%= javascript_pack_tag "dashboard-refresh" %>
<% end %>
