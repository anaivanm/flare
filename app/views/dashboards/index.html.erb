<div class="grid">
  <div class="element-photo element">
    <div class="photo">
      <% if @user.photo? %>
        <%= cl_image_tag @user.photo, size: "220x220", class: "profile-image" %>
      <% else %>
        <%= image_tag "profile_pic.png", size: "220x220", class: "profile-image" %>
      <% end %>
      <h3><%= @user.username %></h3>
    </div>
    <div class="user-info">
        <br>
        <span><%= @user.email %></span>
        <br>
        <br>
      <a href="#" class="edit_profile_info">
        <i class="far fa-edit"></i> <span>Profile Info</span>
        <br>
      </a>
    </div>
  </div>
  <div class="element-open-chats element">
    <%= render "open_chats_list", chats: @open_chats %>
  </div>
  <div class="element element-completed-chats">
    <h2>Completed Chats:</h2>
    <h3>326</h3>
  </div>
  <div class="element element-weekly-schedule">
    <h2>Weekly schedule:</h2>
    <ul class="week">
      <li>Monday <br>
        <ul>
          <li>17:00 - 22:00</li>
        </ul>
      </li>
      <li>Tuesday<br>
        <ul>
          <li>19:00 - 20:00</li>
        </ul>
      </li>
      <li>Wednesday<br>
        <ul>
          <li>Day off</li>
        </ul>
      </li>
      <li>Thursday<br>
        <ul>
          <li>Day off</li>
        </ul>
      </li>
      <li>Friday<br>
        <ul>
          <li>13:00 - 18:00</li>
        </ul>
      </li>
      <li>Saturday<br>
        <ul>
          <li>16:00 - 22:00</li>
        </ul>
      </li>
      <li>Sunday<br>
        <ul>
          <li>Day off</li>
        </ul>
      </li>
    </ul>
  </div>

  <%= link_to "Refresh Chat", open_chats_path, remote: true, class: "btn btn-primary monkeypants"  %>
  <%= content_for :after_js do %>
    <%= javascript_pack_tag "dashboard-refresh" %>
  <% end %>
</div>
