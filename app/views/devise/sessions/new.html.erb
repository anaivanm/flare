<div class="wrapper" style="background-image: linear-gradient(to left bottom, rgba(15, 141, 168, 0.3), rgba(100, 146, 195, 0.4), rgba(165, 148, 200, 0.3), rgba(212, 153, 186, 0.4), rgba(236, 167, 167, 0.3));">
  <h3>Sign in</h3>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="sign_in_form">
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign in", class: "btn btn-login" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
