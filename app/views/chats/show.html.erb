<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="messages">
        <% @chat.messages.each do |message| %>
        <%= render "shared/message", message: message %>
        <% end %>
      </div>
      <div id="create-message">
        <%= simple_form_for [ @chat, Message.new ], remote: true do |f| %>
        <%= f.input :content, label: false %>
        <% end %>
      </div>
    </div>
  </div>
</div>


